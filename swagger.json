{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Free parkings API"
  },
  "schemes": [
    "https",
    "http"
  ],
  "host": "free-parkings-api.herokuapp.com",
  "basePath": "/",
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "User log in",
        "description": "Get user credentials. If correct - send user info including 'accessToken' in response.",
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "description": "Username as a unique identifier",
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Password for account",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful",
            "schema": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": "string"
                },
                "personalInfo": {
                  "type": "object",
                  "properties": {
                    "role": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "avatarUrl": {
                      "type": "string"
                    },
                    "gender": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Login unsuccessful",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["auth"],
        "summary": "User log out",
        "description": "Get user access token. If correct - clear its' token.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Logout successful",
            "schema": {
              "type": "string"
            },
            "examples": {
              "Correct access token": "logout successful"
            }
          },
          "403": {
            "description": "Logout unsuccessful",
            "schema": {
              "type": "string"
            },
            "examples": {
              "Invalid access token": "cannot logout"
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "User sign up (register)",
        "description": "Get user credentials. If correct - store in DB and nofify.",
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "description": "Username as a unique identifier",
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Password for account",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Sign up successful",
            "schema": {
              "type": "string"
            },
            "examples": {
              "Unique username and valid password": "sign up successful"
            }
          },
          "403": {
            "description": "Sign up unsuccessful",
            "schema": {
              "type": "string"
            },
            "examples": {
              "NOT unique username": "username XXX already exists",
              "Some of parameters are invalid": "invalid parameters"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "Admin fetches all users data",
        "description": "Get user accessToken. If admin - send all users as array.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "All users: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "All users: denied",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "User fetches specific user data",
        "description": "Get user accessToken. If allowed - send user data.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "number",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Specific user: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "Specific user: denied",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "User updates profile info (role / avatar / username / fullname / gender / country)",
        "description": "Get user access_token and updates in profile info. If correct - store in DB and nofify.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          },
          {
            "name": "role",
            "in": "formData",
            "description": "New role (admin / driver)",
            "type": "string",
            "required": false
          },
          {
            "name": "imageUrl",
            "in": "formData",
            "description": "New avatar URL (absolute path or base64)",
            "type": "string",
            "required": false
          },
          {
            "name": "username",
            "in": "formData",
            "description": "New username",
            "type": "string",
            "required": false
          },
          {
            "name": "fullname",
            "in": "formData",
            "description": "New fullname",
            "type": "string",
            "required": false
          },
          {
            "name": "gender",
            "in": "formData",
            "description": "New gender",
            "type": "string",
            "required": false
          },
          {
            "name": "defaultCountry",
            "in": "formData",
            "description": "New default country",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "personal info has been updated",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "unable to update personal info",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/users/{id}/car": {
      "get": {
        "tags": ["users", "cars"],
        "summary": "User fetches specific user's car data",
        "description": "Get user accessToken. If allowed - send user's car data.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "number",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Specific user's car data: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "Specific user's car data: denied",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "post": {
        "tags": ["users", "cars"],
        "summary": "User updates car data",
        "description": "Get user access_token and updates in profile info. If correct - store in DB and nofify.",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "number",
            "required": true
          },
          {
            "name": "manufacturer",
            "in": "formData",
            "description": "New car manufacturer",
            "type": "string",
            "required": false
          },
          {
            "name": "model",
            "in": "formData",
            "description": "New car model",
            "type": "string",
            "required": false
          },
          {
            "name": "year",
            "in": "formData",
            "description": "New car year",
            "type": "number",
            "required": false
          },
          {
            "name": "color",
            "in": "formData",
            "description": "New car color",
            "type": "string",
            "required": false
          },
          {
            "name": "length",
            "in": "formData",
            "description": "New car length",
            "type": "number",
            "required": false
          },
          {
            "name": "width",
            "in": "formData",
            "description": "New car width",
            "type": "number",
            "required": false
          },
          {
            "name": "height",
            "in": "formData",
            "description": "New car height",
            "type": "number",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "car info has been updated",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "unable to update car info",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/parkings": {
      "get": {
        "tags": ["parkings"],
        "summary": "Everyone can fetch all parkings data",
        "description": "Send all parkings as array. If lat/lon/radius specified - send only suitable parkings.",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "description": "Latitude",
            "type": "number",
            "required": false
          },
          {
            "name": "lon",
            "in": "query",
            "description": "Longitude",
            "type": "number",
            "required": false
          },
          {
            "name": "radius",
            "in": "query",
            "description": "Radius (meters)",
            "type": "number",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "All parkings: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "All parkings: denied",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "delete": {
        "tags": ["parkings"],
        "summary": "Admin can delete all parkings EITHER on the whole map OR in the specific circle-like area",
        "parameters": [
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          },
          {
            "name": "lat",
            "in": "query",
            "description": "Latitude",
            "type": "number",
            "required": false
          },
          {
            "name": "lon",
            "in": "query",
            "description": "Longitude",
            "type": "number",
            "required": false
          },
          {
            "name": "radius",
            "in": "query",
            "description": "Radius (meters)",
            "type": "number",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Specific parking deletion: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "Specific parking deletion: denied",
            "schema": {
              "type": "string"
            }
          },
          "404": {
            "description": "Specific parking deletion: parking not found",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/parkings/{id}": {
      "get": {
        "tags": ["parkings"],
        "summary": "Everyone can fetch specific parking data",
        "description": "Send parking as array.",
        "parameters": [
          {
            "name": "id",
            "type": "number",
            "in": "path",
            "description": "Parking unique id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Specific parking: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "Specific parking: denied",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "delete": {
        "tags": ["parkings"],
        "summary": "Admin can delete specific parking",
        "parameters": [
          {
            "name": "id",
            "type": "number",
            "in": "path",
            "description": "Parking unique id",
            "required": true
          },
          {
            "name": "access_token",
            "in": "header",
            "description": "Access token given by server when user logged in.",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Specific parking deletion: successfully",
            "schema": {
              "type": "string"
            }
          },
          "403": {
            "description": "Specific parking deletion: denied",
            "schema": {
              "type": "string"
            }
          },
          "404": {
            "description": "Specific parking deletion: parking not found",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
